{
  "buildCommand": "pnpm run build",
  "outputDirectory": ".next",
  "framework": "nextjs",
  "installCommand": "pnpm install",
  "devCommand": "pnpm run dev",
  "functions": {
    "src/app/api/**/*.ts": {
      "maxDuration": 60
    }
  },
  "crons": [
    {
      "path": "/api/publish-posts",
      "schedule": "0 * * * *"
    },
    {
      "path": "/api/generate-daily-posts", 
      "schedule": "0 0 * * *"
    }
  ]
}