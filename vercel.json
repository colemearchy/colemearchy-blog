{
  "buildCommand": "pnpm run build",
  "outputDirectory": ".next",
  "framework": "nextjs",
  "installCommand": "pnpm install",
  "devCommand": "pnpm run dev",
  "functions": {
    "src/app/api/**/*.ts": {
      "maxDuration": 300
    }
  },
  "crons": [
    {
      "path": "/api/generate-daily-posts",
      "schedule": "0 6 * * *"
    },
    {
      "path": "/api/youtube-to-posts-ai",
      "schedule": "0 12 * * *"
    }
  ]
}