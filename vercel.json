{
  "buildCommand": "prisma generate && next build && next-sitemap",
  "outputDirectory": ".next",
  "framework": "nextjs",
  "installCommand": "pnpm install",
  "env": {
    "NEXT_PUBLIC_NODE_ENV": "production"
  },
  "redirects": [
    {
      "source": "/:path((?!_next|api|favicon.ico|icon|apple-icon|robots.txt|sitemap.xml|ads.txt).*)",
      "has": [
        {
          "type": "host",
          "value": "www.colemearchy.com"
        }
      ],
      "destination": "https://colemearchy.com/:path",
      "permanent": true
    }
  ]
}