{
  "buildCommand": "prisma generate && next build && next-sitemap",
  "outputDirectory": ".next",
  "framework": "nextjs",
  "installCommand": "pnpm install",
  "env": {
    "NEXT_PUBLIC_NODE_ENV": "production"
  },
  "crons": [
    {
      "path": "/api/cron/generate-daily-posts",
      "schedule": "0 8 * * *"
    },
    {
      "path": "/api/publish-posts",
      "schedule": "0 * * * *"
    },
    {
      "path": "/api/cron/youtube-sync",
      "schedule": "0 10 * * *"
    }
  ]
}